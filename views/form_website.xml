<odoo>
  <template id="website_lead_form_template" name="Website Lead Form">
    <section class="oe_container" style="background-color: #ffffff; padding: 40px; margin: 40px auto; width: 85%; border: 1px solid #ccc; border-radius: 15px;">
      <div class="oe_structure">
        <h2 class="text-center text-primary mb-4">🚗 Cotiza tu auto con nosotros</h2>

        <!-- Galería de imágenes -->
        <div class="container mb-5">
          <div class="row text-center justify-content-center">
            <t t-foreach="[('4','Mazda'), ('5','Kia'), ('6','Nissan'), ('7','Volkswagen'), ('8','Hyundai'), ('9','Ford'), ('10','Chevrolet'), ('3','Honda')]" t-as="b">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-3">
                <img t-att-src="'/web/image/brand_' + b[0] + '.png'" t-att-data-brand-id="b[0]"
                     class="img-fluid shadow rounded-circle border border-dark p-2 brand-img"
                     style="cursor:pointer; width: 100px; height: 100px;" t-att-alt="b[1]" />
              </div>
            </t>
          </div>
        </div>

        <!-- Formulario -->
        <form action="/website_lead/submit" method="POST" class="form">
          <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

          <!-- Marca -->
          <div class="form-group mb-3">
            <label class="fw-bold">Marca</label>
            <select name="brand_id" class="form-control" required="True">
              <option value="">Selecciona una marca</option>
              <t t-foreach="brands" t-as="brand">
                <option t-att-value="brand.id"><t t-esc="brand.name"/></option>
              </t>
            </select>
          </div>

          <!-- Año -->
          <div class="form-group mb-3">
            <label class="fw-bold">Año</label>
            <select name="year_id" class="form-control" required="True">
              <option value="">Selecciona un año</option>
            </select>
          </div>

          <!-- Modelo -->
          <div class="form-group mb-3">
            <label class="fw-bold">Modelo</label>
            <select name="model_id" class="form-control" required="True">
              <option value="">Selecciona un modelo</option>
            </select>
          </div>

          <!-- Versión -->
          <div class="form-group mb-4">
            <label class="fw-bold">Versión</label>
            <select name="version_id" class="form-control" required="True">
              <option value="">Selecciona una versión</option>
            </select>
          </div>

          <!-- Campos adicionales -->
          <div id="extra-fields" class="d-none">
            <div class="form-group mb-3">
              <label class="fw-bold">Nombre completo</label>
              <input type="text" name="customer_name" class="form-control" placeholder="Nombre completo" required="True" />
            </div>

            <div class="form-group mb-3">
              <label class="fw-bold">Teléfono</label>
              <input type="tel" name="phone" class="form-control" placeholder="Teléfono" required="True" />
            </div>

            <div class="form-group mb-4">
              <label class="fw-bold">Correo electrónico</label>
              <input type="email" name="email" class="form-control" placeholder="Correo electrónico" required="True " />
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary btn-lg">Enviar solicitud 🚀</button>
            </div>
          </div>
        </form>
      </div>
    </section>
  </template>
</odoo>
