<odoo>
  <data>

    <!-- Vista tipo lista para Year -->
    <record id="view_year_list" model="ir.ui.view">
      <field name="name">view.year.list</field>
      <field name="model">car.year</field>
      <field name="type">list</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
        </list>
      </field>
    </record>

    <!-- Vista tipo formulario para Year -->
    <record id="view_year_form" model="ir.ui.view">
      <field name="name">view.year.form</field>
      <field name="model">car.year</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Año">
          <group>
            <field name="name"/>            
          </group>
        </form>
      </field>
    </record>

    <!-- Acción para abrir Year -->
    <record id="year_action_window" model="ir.actions.act_window">
      <field name="name">Año</field>
      <field name="res_model">car.year</field>
      <field name="view_mode">list,form</field>
    </record>

  </data>
</odoo>
